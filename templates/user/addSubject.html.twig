{% extends 'user/layout.html.twig' %}

{% block body_id 'subject_new' %}

{% block main %}
    <h1>{{ 'New Subject' }}</h1>

    {{ form_start(form) }}
    {{ form_row(form.subjectName) }}
    {{ form_row(form.subjectKey) }}
    {{ form_row(form.program) }}
    {{ form_row(form.ects) }}
    {{ form_row(form.semester_fullTimeStudent) }}
    {{ form_row(form.semester_partTimeStudent) }}
    {{ form_row(form.optionalSubject) }}
    {{ form_row(form.termsAccepted) }}

    <button type="submit" class="btn btn-primary">
        <i class="fa fa-save" aria-hidden="true"></i> {{ 'create subject'}}
    </button>
    {{ form_widget(form.saveAndCreateNew, {label: 'label.save_and_create_new', attr: {class: 'btn btn-primary'}}) }}
    <a href="{{ path('subject_index') }}" class="btn btn-link">
        <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'back to list' }}
    </a>
    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
    {{ parent() }}

{% endblock %}