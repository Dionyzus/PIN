{% extends 'base.html.twig' %}

{% block body_id 'admin_editSubjects' %}

{% block main %}
    <h1>{{ 'title.edit_user'|trans }} : {{ user.getFullname() }}</h1>

    <div class="row">
        <div class="col">
            <table class="table table-bordered table-striped">
                <thead class="alert-info">
                <tr>
                    <th scope="col">Subject ID</th>
                    <th scope="col">Subject Key</th>
                    <th scope="col">Subject Name</th>
                    <th scope="col">Action</th>
                </tr>
                </thead>
                <tbody>
                {% for subject in unassignedSubjects %}
                    <tr>
                        <td scope="row">{{ subject.id }}</td>
                        <td scope="row">{{ subject.subjectKey }}</td>
                        <td>{{ subject.subjectName }}</td>
                        <td>
                            <a href="{{ path('admin.assign', {userId: user.id, subjectId: subject.id}) }}" class="btn btn-success btn-sm">Assign subject</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col">
            <table class="table table-bordered table-striped">
                <tbody>
                {% for subject in assignedSubjects %}
                    <tr>
                        <td scope="row">{{ subject.id }}</td>
                        <td scope="row">{{ subject.subjectKey }}</td>
                        <td>{{ subject.subjectName }}</td>
                        <td>
                            <a href="{{ path('admin.unassign', {userId: user.id, subjectId: subject.id}) }}" class="btn btn-danger btn-sm">Unassign subject</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}