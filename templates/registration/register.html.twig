{% extends 'base.html.twig' %}
{% block body_id 'register' %}

{% block main %}
    {% form_theme form 'bootstrap_4_layout.html.twig' %}
    <h1>{{ 'Registration' }}</h1>
    
    {{ form_start(form) }}

    {{ form_widget(form) }}

    <button type="submit" class="btn btn-primary">
        <i class="fa fa-save" aria-hidden="true"></i> {{ 'register'}}
    </button>
    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
    <div class="alert alert-info" role="alert">
        <div class="section">
            <h3><b>Register with your university account to become a part of mentorship program of OSS Split</b></h3>
        </div>
        <div>
            <br><p>Have an account? <b>Log in here!</b></p>
            <a href="{{ path('app_login') }}" class="btn btn-lg btn-primary">
                <i class="fa fa-sign-in" aria-hidden="true"></i> {{ 'login' }}
            </a>
        </div>
    </div>

    {{ parent() }}

{% endblock %}
